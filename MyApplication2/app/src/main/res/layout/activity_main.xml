<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        tools:context=".MainActivity">

    <TextView
            android:id="@+id/myTextView1"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:text="@string/str_title"
            android:textColor="@drawable/blue"
            android:textSize="20sp" tools:ignore="MissingConstraints" android:layout_alignParentStart="true"/>

    <Button
            android:id="@+id/myButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/myTextView1"
            android:layout_marginLeft="56dp"
            android:layout_marginTop="71dp"
            android:text="@string/str_button1"
            android:textColor="@drawable/black"
            android:textSize="14sp" tools:ignore="MissingConstraints" android:layout_marginStart="56dp"
            android:layout_alignParentStart="true"/>


</androidx.constraintlayout.widget.ConstraintLayout>